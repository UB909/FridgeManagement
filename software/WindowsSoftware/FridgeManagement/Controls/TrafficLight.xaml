<UserControl x:Class="FridgeManagement.Controls.TrafficLight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FridgeManagement.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
    <Grid>
        <Image Name="green" Source="TrafficLightResources/Green.png" Visibility="Collapsed"/>
        <Image Name="yellow" Source="TrafficLightResources/Yellow.png" Visibility="Collapsed"/>
        <Image Name="red" Source="TrafficLightResources/Red.png" Visibility="Collapsed"/>
        <Image Name="grey" Source="TrafficLightResources/Grey.png" Visibility="Visible"/>
    </Grid>
</UserControl>
